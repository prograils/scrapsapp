= link_to "ScrapsApp", root_path, :class => 'brand'
%ul.nav
  - if user_signed_in?
  - else
    %li
      = link_to 'Login', new_user_session_path
  - if user_signed_in?
    %li
      = link_to 'Your organizations', organizations_path
    %li
      = link_to 'All organizations', public_organizations_path
  - else
    %li
      = link_to 'Sign up', new_user_registration_path
.btn-group.pull-right
  - if user_signed_in?
    %a.btn.dropdown-toggle{:'data-toggle'=>"dropdown", :href=>"#"}
      - if current_user.email.blank?
        = draw_icon 'user'
      - else
        = gravatar_image_tag current_user.email, :class=>"user_image", :gravatar => { :size => 18 }
      = current_user.username
      %span.caret/
    %ul.dropdown-menu
      %li
        = link_to 'Edit account', edit_user_registration_path
      %li.divider/
      %li
        = link_to 'Logout', destroy_user_session_path, :method=>'delete'
  - else
    %a.btn.dropdown-toggle{:'data-toggle'=>"dropdown", :href=>"#"}
      = draw_icon 'user'
      = t('.navigation_header_login', :default=>"Login")
      %span.caret/
    %ul.dropdown-menu
      %li
        = link_to( "Login", new_user_session_path)
      %li
        = link_to( "Sign up", new_user_registration_path)


